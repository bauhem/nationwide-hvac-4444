<div class="section-testimonials">
  <div data-delay="6000" data-animation="slide" data-autoplay="1" data-disable-swipe="1" data-duration="500" data-infinite="1" class="slider-temoignages w-slider">
    <div class="w-slider-mask">
      <% dato.testimonials.each do |testimonial| %>
      <div class="slide-temoignages w-slide">
        <div class="div-flex-h">
          <div class="div-50 bg-color-1">
            <div class="testimonial-left">
              <%= testimonial.description %>
              <div class="testimonial-author"><strong><%= testimonial.name %></strong></div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="w-hidden-small w-hidden-tiny w-slider-arrow-left" data-ix="hover-arrow-left">
      <div class="w-icon-slider-left"></div>
    </div>
    <div class="w-hidden-small w-hidden-tiny w-slider-arrow-right" data-ix="hover-arrow-right">
      <div class="w-icon-slider-right"></div>
    </div>
    <div class="w-hidden-main w-hidden-medium w-hidden-small w-hidden-tiny w-slider-nav w-round"></div>
  </div>
</div>
