<script>
  var containerEl = document.querySelector('.container');

  function scrollToContainer() {
    $('html, body').animate({
      scrollTop: $('.section-hero-interior').offset().top
    }, 300);
  }

  var mixer = mixitup(containerEl, {
    pagination: {
      limit: 12
    },
    multifilter: {
      enable: true
    },
    animation: {
      enable: false
    },
    callbacks: {
      onMixEnd: scrollToContainer
    }
